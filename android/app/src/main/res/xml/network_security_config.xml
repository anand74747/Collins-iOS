<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic to all domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Explicitly allow agents.skillablers.com -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">agents.skillablers.com</domain>
        <domain includeSubdomains="true">skillablers.com</domain>
        <domain includeSubdomains="true">192.168.10.135</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>
